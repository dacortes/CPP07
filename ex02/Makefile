################################################################################
#                               VARIABLES                                      #
################################################################################

NAME = Iter 
CPP = c++
FLAGS = -Wall -Werror -Wextra -g -pedantic -std=c++98 \
	#-fsanitize=address
RM = rm -rf

################################################################################
#                               SOURCES                                        #
################################################################################

SRC = main.cpp
INC = $(addprefix -I , inc/)

################################################################################
#                               DIRECTORIES                                    #
################################################################################

D_SRC = src
D_OBJ = $(D_SRC)/obj
OBJ = $(addprefix $(D_OBJ)/, $(SRC:.cpp=.o))
DEP = $(addprefix $(D_OBJ)/, $(SRC:.cpp=.d))

################################################################################
#                               BOLD COLORS                                    #
################################################################################

E = \033[m
R = \033[31m
G = \033[32m
Y = \033[33m
B = \033[34m
P = \033[35m
C = \033[36m

################################################################################
#  FONT                                                                        #
################################################################################

ligth = \033[1m
dark = \033[2m
italic = \033[3m

################################################################################
#                               MAKE RULES                                     #
################################################################################

all: dir $(NAME)

-include $(DEP)

dir:
	-mkdir $(D_OBJ)

$(D_OBJ)/%.o:$(D_SRC)/%.cpp Makefile
	$(CPP) $(FLAGS) -MMD -c $< -o $@ $(INC)
	printf "\r$(ligth)$(B)file:$(E) $(ligth)$< $(B)to$(E) $(ligth)$@$(E)       "

$(NAME): $(OBJ) 
	$(CPP) $(FLAGS) $(INC) $(OBJ) -o $(NAME)
	echo "\n$(B)$(ligth)Project $(NAME) compiled!$(E)      "

################################################################################
#                               CLEAN                                          #
################################################################################

clean:
	$(RM) $(D_OBJ)
	echo "$(ligth)->$(B)$(NAME) object files cleaned!$(E)"

fclean: clean
	$(RM) $(NAME)
	echo "$(ligth)->$(B)$(NAME) executable files and name cleaned!$(E)"

re: fclean all

.SILENT:
.PHONY: all clean fclean re dir
